global:
  # ResolveTimeout is the time after which an alert is declared resolved
  # if it has not been updated.
  resolve_timeout: {{ alertmanager_resolve_timeout }}

{% if alertmanager_smtp_from != '' %}
  # The default SMTP From header field.
  smtp_from: {{ alertmanager_smtp_from }}
{% endif %}
{% if alertmanager_smtp_smarthost != '' %}
  # The default SMTP smarthost used for sending emails.
  smtp_smarthost: {{ alertmanager_smtp_smarthost }}
{% endif %}
{% if alertmanager_smtp_auth_username != '' %}
  # SMTP authentication information.
  smtp_auth_username: {{ alertmanager_smtp_auth_username }}
  smtp_auth_password: {{ alertmanager_smtp_auth_password }}
{% endif %}
{% if alertmanager_smtp_auth_secret != '' %}
  smtp_auth_secret: {{ alertmanager_smtp_auth_secret }}
{% endif %}

{% if alertmanager_slack_api_url != '' %}
  # The API URL to use for Slack notifications.
  slack_api_url: {{ alertmanager_slack_api_url }}
{% endif %}

{% if alertmanager_pagerduty_url != '' %}
  # The API URL to use for Slack notifications.
  pagerduty_url: {{ alertmanager_pagerduty_url }}
{% endif %}
{% if alertmanager_opsgenie_api_host != '' %}
  # The API URL to use for Slack notifications.
  opsgenie_api_host: {{ alertmanager_opsgenie_api_host }}
{% endif %}
{% if alertmanager_hipchat_url != '' %}
  # The API URL to use for Slack notifications.
  hipchat_url: {{ alertmanager_hipchat_url }}
{% endif %}
{% if alertmanager_hipchat_auth_token != '' %}
  # The API URL to use for Slack notifications.
  hipchat_auth_token: {{ alertmanager_hipchat_auth_token }}
{% endif %}

route:
  group_by: ['alertname', 'cluster']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 3h
  continue: true
  receiver: 'default-pager'


receivers:
  - name: 'default-pager'
    pagerduty_configs:
    - service_key: <team-X-key>
